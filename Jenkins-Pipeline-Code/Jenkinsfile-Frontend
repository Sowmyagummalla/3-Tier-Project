pipeline {
    agent any
    tools {
        jdk 'java'
        nodejs 'node22'
    }
    environment{
        DOCKER_IMAGE = 'sowmyagummalla/frontend:1.0'
    }
    stages {
        stage('clean workspace') {
            steps {
                cleanWs()
            }
        }
        stage('Checkout from Git') {
            steps {
                git branch: 'main', url: 'https://github.com/Sowmyagummalla/3-Tier-Project.git'
            }
        }
        stage('Sonarqube Analysis') {
            steps {
                dir('client') {
                withSonarQubeEnv('sonar-server') {
                    sh '''mvn clean verify sonar:sonar \
                             -Dsonar.projectKey=3-tier-project \
                             -Dsonar.host.url=http://13.235.244.202:9000 \
                             -Dsonar.login=squ_a30d6d5effbf768bec28ac25fb4a47cce8adaa36'''
                      }
                  }   
             }
        }
        stage("quality gate") {
           steps {
                script {
                    waitForQualityGate abortPipeline: false, credentialsId: 'sonar-token'
                }
            }
        }
        stage('Trivy File Scan') {
            steps {
                dir('client') {
                    sh 'trivy fs . > trivyfs.txt'
                }
            }
        }
        stage('Build Docker Image') {
            steps {
                script{
                    dir('client') {
                   withDockerRegistry(credentialsId: 'dockerhub'){
                      sh 'docker build -t $DOCKER_IMAGE .'
                      sh 'docker push $DOCKER_IMAGE'
                    }                   
                 }
               }
            }
        }
        stage("TRIVY Image Scan") {
            steps {
                sh 'trivy image sowmyagummalla/frontend:1.0 > trivyimage.txt' 
            }
        }
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/Sowmyagummalla/3-Tier-Project.git'
            }
        }
        stage('Update Deployment file') {
            steps {
                dir('kubernetes-files') {
                    withCredentials([string(credentialsId: 'github', variable: 'git_token')]) {
                        sh '''
                            git config user.email "sowmyareddygummalla@gmail.com"
                            git config user.name "Sowmyagummalla"
                            BUILD_NUMBER=latest
                            echo $BUILD_NUMBER
                            sed -i "s#image:.*#image: sowmyagummalla/frontend:${BUILD_NUMBER}#g" frontend-deploy-service.yaml
                            git add .
                            git commit -m "Update deployment Image to version ${BUILD_NUMBER}"
                            git push https://${git_token}@github.com/Sowmyagummalla/3-Tier-Project.git- HEAD:main
                        '''
                    }
                }
            }
        }
        //stage('Deploy to kubernetes') {
          //  steps {
            //    script {
              //      dir('Kubernetes-Manifests-file') {
                //        withKubeConfig(caCertificate: '', clusterName: '', contextName: '', credentialsId: 'k8s', namespace: '', restrictKubeConfigAccess: false, serverUrl: '') {
                  //          sh 'aws eks update-kubeconfig --name project-eks --region ap-south-1'
                    //        sh 'kubectl apply -f deploy_svc.yml'
                      //  }
                    // }
               // }
           // }
       // }
    }
}
